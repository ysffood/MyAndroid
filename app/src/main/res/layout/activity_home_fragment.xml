<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是主页面点击我变字"/>

    <fragment
        android:id="@+id/fragment_1"
        android:name="com.yk.demo.myandroid.test.fragment.TestFirstFragment"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_text"
        android:layout_height="150dp"
        tools:layout="@layout/fragment_test_first" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_below="@id/fragment_1"
        android:name="com.yk.demo.myandroid.test.fragment.TestSecondFragment"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        tools:layout="@layout/fragment_test_second" >
        <android.support.v4.view.PagerTabStrip
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v4.view.PagerTabStrip>
    </android.support.v4.view.ViewPager>

    <FrameLayout
        android:id="@+id/fragment_alter"
        android:layout_below="@id/view_page"
        android:layout_width="match_parent"
        android:layout_height="200dp" >
    </FrameLayout>

</RelativeLayout>
